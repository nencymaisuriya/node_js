<%- include('header') %>

<!-- Custom Bootstrap Enhancements -->
<style>
  .card {
    background: linear-gradient(135deg, #fcf8fb, #f8f9fa);
  }

  .profile-img {
    width: 140px;
    height: 140px;
    object-fit: cover;
    border: 4px solid #0d6efd;
    padding: 2px;
  }

  h3 {
  color: #0f0f0f;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

  .card-body p {
    font-size: 1rem;
    color: #343a40;
  }

  .btn-primary {
    background-color: #0d6efd;
    border-color: #0d6efd;
    font-weight: 500;
    padding: 0.6rem 1.5rem;
    font-size: 1rem;
  }

  .btn-primary:hover {
    background-color: #084298;
    border-color: #06357a;
  }

  .container {
    max-width: 900px;
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-md-4 text-center mb-3 mb-md-0">
              <img src="<%= currentAdmin.image %>" alt="Profile Image"
                class="img-fluid rounded-circle profile-img shadow">
            </div>
            <div class="col-md-8">
              <h3 class="fw-bold mb-2">
                <%= currentAdmin.fname + " " + currentAdmin.lname %>
              </h3>
              <p class="mb-1"><strong>Email:</strong> <%= currentAdmin.email %></p>
              <p class="mb-1"><strong>Gender:</strong> <%= currentAdmin.gender %></p>
              <p class="mb-1"><strong>Hobby:</strong> <%= currentAdmin.hobby %></p>
              <p class="mb-1"><strong>City:</strong> <%= currentAdmin.city %></p>
              <a href="/updateAdmin/?id=<%= currentAdmin._id %>" class="btn btn-primary mt-4">
                Edit Profile
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>

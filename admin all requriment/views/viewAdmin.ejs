<%- include('header') %>

<div class="page-wrapper">
  <!-- Breadcrumb -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex justify-content-between align-items-center">
        <!-- <h4 class="page-title">Admin Table</h4> -->
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
          </ol>
        </nav>
      </div>

      <!-- Success Alert -->
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
          <strong>Success!</strong> <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Error Alert -->
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
          <strong>Error!</strong> <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Table Content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-4">Admin Data</h5>

            <div class="table-responsive">
              <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                  <tr>
                    <th>#</th>
                    <th>Fname</th>
                    <th>Lname</th>
                    <th>Email</th>
                    <% if (locals.currentAdmin.email == 'nencymaisuriya@gmail.com') { %>
                      <th>Password</th>
                    <% } %>
                    <th>Gender</th>
                    <th>Hobby</th>
                    <th>City</th>
                    <th>Description</th>
                    <th>Avatar</th>
                    <% if (locals.currentAdmin.email == 'nencymaisuriya@gmail.com') { %>
                      <th>Action</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% records.forEach((data, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= data.fname %></td>
                      <td><%= data.lname %></td>
                      <td><%= data.email %></td>
                      <% if (locals.currentAdmin.email == 'nencymaisuriya@gmail.com') { %>
                        <td><%= data.password %></td>
                      <% } %>
                      <td><%= data.gender %></td>
                      <td><%= data.hobby %></td>
                      <td><%= data.city %></td>
                      <td><%= data.desc %></td>
                      <td><img src="<%= data.image %>" alt="Avatar" class="img-thumbnail" style="height: 60px;"></td>

                      <% if (locals.currentAdmin.email == 'nencymaisuriya@gmail.com') { %>
                        <td>
                          <a href="/updateAdmin/?id=<%= data.id %>" class="btn btn-sm btn-success mb-1 w-100">Edit</a>
                          <a href="/deleteAdmin/<%= data.id %>" class="btn btn-sm btn-danger w-100"
                             onclick="return confirm('Are you sure you want to delete this admin?');">Delete</a>
                        </td>
                      <% } %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>

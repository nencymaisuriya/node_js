<%- include('../header') %>




    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Category Form</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Add Category</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg border-0">
                        <form class="form-horizontal p-4" method="POST" action="/category/insertcategory"
                            enctype="multipart/form-data">
                            <h4 class="mb-4 text-center text-primary"><i class="fas fa-layer-group"></i> Add New
                                Category</h4>

                            <!-- Category Title -->
                            <div class="form-group row">
                                <label for="c_title"
                                    class="col-sm-3 text-end col-form-label font-weight-bold">Title</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="c_title" id="c_title"
                                        placeholder="Enter Category Title" required>
                                </div>
                            </div>

                            <!-- Image Upload -->
                            <div class="form-group row">
                                <label for="c_image"
                                    class="col-sm-3 text-end col-form-label font-weight-bold">Image</label>
                                <div class="col-sm-9">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="c_image" id="c_image"
                                            accept="image/*" onchange="readURL(this);" required>
                                        <label class="custom-file-label" for="c_image">Choose image...</label>
                                    </div>
                                    <small class="form-text text-muted mt-2">Only image formats allowed.</small>
                                    <div id="preview" class="mt-3">
                                        <img id="preview-img" src="#" alt="" style="display: none; max-height: 150px;"
                                            class="rounded shadow">
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary px-4 py-2">
                                    <i class="fas fa-plus-circle"></i> Add Category
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Preview Script -->
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview-img').attr('src', e.target.result).show();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Show selected filename
        $('.custom-file-input').on('change', function () {
            var fileName = $(this).val().split('\\').pop();
            $(this).siblings('.custom-file-label').addClass("selected").html(fileName);
        });
    </script>



    <%- include('../footer') %>
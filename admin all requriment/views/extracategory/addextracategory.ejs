<%- include('../header') %>




    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title"> Extra Categoy Form</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Library
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/extracategory/insertExtraCategory">
                            <div class="card-body">
                                <h4 class="card-title">Extra Category Jaynesh Sarkar</h4>

                                <!-- Category -->
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-end control-label col-form-label">
                                        Category
                                    </label>
                                    <div class="col-sm-9">
                                        <select class="form-control" name="category_id">
                                            <option value="">--- Select ---</option>

                                            <%allCategory.map((category)=> {%>
                                                <option value="<%= category.id %>">
                                                    <%= category.c_title %>
                                                </option>
                                                <% })%>
                                        </select>

                                    </div>
                                </div>
                                <!-- SubCategory -->
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-end control-label col-form-label">
                                        SubCategory
                                    </label>
                                    <div class="col-sm-9">
                                        <select class="form-control" name="subCategory_id">

                                            <option value="">--- Select ---</option>
                                            <%allSubCategory.map((subcategory)=> {%>
                                                <option value="<%= subcategory.id %>">
                                                    <%= subcategory.subcategory_title %>
                                                </option>
                                                <% })%>

                                        </select>

                                    </div>
                                </div>

                                <!-- ExtraCategory Title  -->
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-end control-label col-form-label">Extra
                                        Category
                                        Title</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="extraCategory_title"
                                            placeholder="Enter Extra Category Title" required />
                                    </div>
                                </div>



                                <!-- Add ExtraCategory Button  -->
                                <div class="border-top">
                                    <div class="card-body">
                                        <button type="submit" class="btn btn-primary">
                                            Add Extra Category
                                        </button>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>



        <%- include('../footer') %>
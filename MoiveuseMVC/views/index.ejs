</div>


  </div>
</div>

<!-- Dynamic Movie Cards (using EJS templating) -->
<div class="movie-grid">
  <% movies.forEach(movie => { %>
    <div class="movie-card">
      <a href="/indetails">
        <img src="/<%= movie.image %>" alt="Movie image" />
      </a>
      <div class="movie-info">
        <h3><%= movie.title %></h3>
        <p><strong>Director:</strong> <%= movie.director %></p>
        <p><strong>Year:</strong> <%= movie.year %></p>
        <p><strong>Type:</strong> <%= movie.type %></p>

        <div class="card-buttons">
          <a href="/edit_movie/<%= movie._id %>" class="btn edit">Edit</a>
          <a href="/delete/<%= movie._id %>" class="btn delete">Delete</a>
          <button class="like-btn" title="Like">&#10084;</button>
        </div>
      </div>
    </div>
  <% }) %>
</div>

</body>
</html>

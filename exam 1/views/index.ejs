<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Library Management System</title>
  <style>
    body {
      background-color: #141414;
      font-family: 'Segoe UI', sans-serif;
      color: white;
      margin: 0;
      padding: 0;
    }
    header {
      padding: 20px 40px;
      background-color: black;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo {
      font-size: 28px;
      font-weight: bold;
      color: #00C896;
      text-decoration: none;
    }
    .add-book-link {
      display: inline-block;
      background-color: #00C896;
      color: white;
      padding: 10px 18px;
      text-decoration: none;
      border-radius: 8px;
      font-weight: bold;
    }
    .book-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 25px;
      justify-items: center;
      padding: 40px;
    }
    .book-card {
      background: #222;
      border-radius: 12px;
      overflow: hidden;
      width: 250px;
      transition: transform 0.3s ease;
    }
    .book-card:hover {
      transform: scale(1.05);
    }
    .book-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    .book-info {
      padding: 15px;
    }
    .book-info h3 {
      font-size: 18px;
      margin-bottom: 10px;
    }
    .card-buttons {
      margin-top: 10px;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    .btn {
      padding: 6px 10px;
      font-size: 14px;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      color: white;
      cursor: pointer;
      margin-top: 5px;
    }
    .edit { background: #17a2b8; }
    .delete { background: #dc3545; }
    .like-btn {
      background: none;
      border: none;
      color: #ff4d4d;
      font-size: 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>

<header>
  <a href="/" class="logo">Library Store</a>
  <a href="/add" class="add-book-link">Add New Book</a>
</header>

<div class="book-grid">
  <% libaray.forEach(libaray => { %>
    <div class="book-card">
      <img src="/uploads/<%= libaray.image %>" alt="Book image">
      <div class="book-info">
        <h3><%= libaray.bookname %></h3>
        <p><strong>Author:</strong> <%= libaray.auth %></p>
        <p><strong>Price:</strong> â‚¹<%= libaray.bookprice %></p>
        <p><strong>Date:</strong> <%= libaray.bookdate %></p>
        <p><strong>Time:</strong> <%= libaray.time %></p>
        <p><strong>Location:</strong> <%= libaray.location %></p>
        <div class="card-buttons">
          <a href="/delete/<%= libaray._id %>" class="btn delete">Delete</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

</body>
</html>
